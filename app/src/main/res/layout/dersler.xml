<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/dersAd"
            android:layout_width="117dp"
            android:layout_height="60dp"
            android:textSize="19sp"
             android:gravity="center"
            android:textColor="#42031f"
            android:text="dersler" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="168dp"
            android:layout_height="80dp">

            <TextView
                android:textColor="#000000"
                android:text="toplam biten soru"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="15dp"
                android:id="@+id/toplamSoru" />

            <TextView
                android:textColor="#000000"
                android:text="toplam biten konu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="15dp"
                android:id="@+id/toplamkonu" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#000000"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="15dp"
                android:id="@+id/bitenSoru" />

            <TextView
                android:textColor="#000000"
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="15dp"
                android:id="@+id/bitenKonu" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
