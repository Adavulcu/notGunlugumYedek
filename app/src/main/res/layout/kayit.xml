<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_weight="0.46"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AD  *" />

            <TextView
                android:id="@+id/soyAdView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SOYAD  *" />

            <TextView
                android:id="@+id/epostaView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E-POSTA  *" />


            <TextView
                android:id="@+id/okulNoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OKUL NO  *" />

            <TextView
                android:id="@+id/telView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TELEFON" />

            <TextView
                android:id="@+id/hedefUniView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HEDEF ÜNİVERSİTE" />

            <TextView
                android:id="@+id/hedefBolumView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HEDEF BÖlÜM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/adText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=" " />

            <EditText
                android:id="@+id/soyAdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=" " />

            <EditText
                android:id="@+id/epostaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:text=" " />

            <EditText

                android:id="@+id/okulNoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text=" " />

            <EditText
                android:id="@+id/telText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:text=" " />

            <EditText
                android:id="@+id/HUniText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=" " />

            <EditText
                android:id="@+id/HbolumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=" " />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/kaydetBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEĞİŞİKLİLERİ KAYDET" />
    <TextView
        android:id="@+id/uyariView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* alanlar zorunludur"
        android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>
